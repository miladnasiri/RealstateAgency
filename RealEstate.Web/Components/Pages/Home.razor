@page "/"

<PageTitle>Real Estate Agency</PageTitle>

<div class="text-center">
    <h1 class="display-4">Welcome to Real Estate Agency</h1>
    <p class="lead">Your trusted partner in finding the perfect property</p>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Properties for Sale</h5>
                    <p class="card-text">Browse our extensive collection of properties available for purchase</p>
                    <a href="/properties" class="btn btn-primary">View Properties</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Properties for Rent</h5>
                    <p class="card-text">Find the perfect rental property for your needs</p>
                    <a href="/properties" class="btn btn-primary">View Rentals</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Expert Agents</h5>
                    <p class="card-text">Work with our experienced real estate professionals</p>
                    <a href="/properties" class="btn btn-primary">Contact Agents</a>
                </div>
            </div>
        </div>
    </div>
</div>
